.number {
  display: flex;
  align-items: center;
}

.number .number-txt {
  font-size: 32rpx;
  color: #000;
  padding: 0 12rpx;
  opacity: 0;
  visibility: hidden;
}

.number .number-txt-show {
  opacity: 1;
  visibility: visible;
}

.number .icon {
  padding: 8rpx;
  width: 48rpx;
  height: 48rpx;
}

.number .reduce-icon {
  opacity: 0;
  transform: translate3d(160%, 0, 0) rotate(180deg);
  visibility: hidden;
  transition: all .4s linear;
}

.number .reduce-icon-show {
  opacity: 1;
  transform: translate3d(0, 0, 0) rotate(0deg);
  visibility: visible;
}