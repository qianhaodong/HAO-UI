page {
  font-size: 28rpx;
  color: #333;
  background-color: #f5f5f5;
}

.index-header {
  display: flex;
  align-items: center;
  padding: 80rpx 60rpx;
}

.index-header .logo {
  margin-right: 30rpx;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}

.index-header .tips {
  flex: 1;
  color: #666;
}

.index-content {
  padding: 30rpx;
  font-size: 32rpx;
}

.item {
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx -8rpx rgba(0, 0, 0, 0.1);
}

.item-hover {
  background-color: #eee;
}

.item-hd {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 40rpx;
  background-color: #fff;
}

.item-hd .icon {
  width: 60rpx;
  height: 60rpx;
}

.drop-menu {
  height: 0;
  overflow: hidden;
  background-color: #fff;
}

.drop-menu-show {
  height: auto;
}

.drop-box {
  opacity: 0;
  transform: translate3d(0, -30%, 0);
  transition: all 0.2s ease-in-out;
}

.drop-box-show {
  height: auto;
  opacity: 1;
  transform: translate3d(0, 0, 0);
}

.drop-menu-item {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  padding: 32rpx;
}

.drop-menu-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 30rpx;
  right: 30rpx;
  height: 1px;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  transform-origin: 0 0;
  transform: scaleY(0.5);
}

.drop-menu-item:first-child::before {
  display: none;
}

.drop-menu-item::after {
  content: '';
  width: 14rpx;
  height: 14rpx;
  border-style: solid;
  border-color: #c2c2c2;
  border-width: 3rpx 3rpx 0 0;
  transform: rotate(45deg);
}