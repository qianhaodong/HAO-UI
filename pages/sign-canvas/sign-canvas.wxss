page {
    position: relative;
}

.canvas {
    width: 100vw;
    height: 100vh;
    background-color: #F6F8F8;
}

.btns {
    position: absolute;
    left: 50%;
    bottom: 35rpx;
    transform: translateX(-50%);
    display: flex;
    justify-content: center;
    z-index: 10;
}

.btns .btn {
    margin: 0 30rpx;
    line-height: 30rpx;
    width: 80rpx;
    border-radius: 30rpx;
    font-size: 16rpx;
    box-sizing: border-box;
    text-align: center;
}

.btns .clear {
    border: 1px solid #1E98DA;
    color: #1E98DA;
}

.btns .confirm {
    color: #ffffff;
    background-color: #1E98DA;
}
